angular.module('todoApp', [] )
	.controller('TodoListController', function() {
		var todoList = this;
		todoList.todos = [
			{text:'Learn Angular', done:true},
			{text:'Build an Angular App', done:false}];

	todoList.addTodo = function() {
		if($('.todoinput').val()  != ''){ // check for empty inpput
			todoList.todos.push({text:todoList.todoText, done:false}); // if not empty, add to the list
	}
		//todoList.todoText = "";
		};

	todoList.remaining = function(){
		var count = 0;
		angular.forEach(todoList.todos, function(todo) {
				count += todo.done ? 0 : 1;
			});
			return count;
		};

	todoList.archive = function() {
		var oldTools = todoList.todos;
		todoList.todos = [];
		angular.forEach(oldTools, function(todo) {
			if(!todo.done) todoList.todos.push(todo);
		});
	};
});
